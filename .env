# Moov Configuration - API Key Authentication
# Get credentials from your Moov account

MOOV_BASE_URL=https://api.moov.io
MOOV_API_KEY=your_api_key_here
MOOV_PLATFORM_ACCOUNT_ID=your_platform_account_id_here

# Database configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=GRATLYDB

# Enable database migrations on startup
RUN_DB_MIGRATIONS=true

# Optional webhook configuration
MOOV_WEBHOOK_PATH=/api/webhooks/moov
MOOV_RETURN_PATH=/moov/return
MOOV_DISABLE_WEBHOOK_VERIFY=false
