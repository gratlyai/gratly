# Moov Development Configuration
# Get credentials from: https://moov-sandbox.com/settings/api-keys

MOOV_CLIENT_ID=your_sandbox_client_id_here
MOOV_CLIENT_SECRET=your_sandbox_client_secret_here
MOOV_LOCAL_MODE=true
MOOV_ENV=local
MOOV_CALLBACK_MODE=tunnel

# Public URL for tunnel (run: ./scripts/dev/moov_tunnel.sh --port 8000)
PUBLIC_BASE_URL=https://your-ngrok-url.ngrok.io

# Database connection (if testing locally)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=GRATLYDB

# Optional
MOOV_BASE_URL=https://api.moov.io
MOOV_WEBHOOK_PATH=/api/webhooks/moov
MOOV_RETURN_PATH=/moov/return
MOOV_DISABLE_WEBHOOK_VERIFY=true
